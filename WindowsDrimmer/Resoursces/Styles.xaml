<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WindowsDrimmer.Resoursces">


    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="#303030"/>
    </Style>

    <Style TargetType="DataGridCell">
        <Setter Property="Background" Value="#6B6B6B"/>
    </Style>

    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="#30313B"/>
        <Setter Property="Foreground" Value="#A4BD40"/>
        <Setter Property="FontSize" Value="16.5"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style TargetType="Grid">
        <Setter Property="Background" Value="#30313B"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="Background" Value="#30313B"/>
        <Setter Property="Foreground" Value="#F7630C"/>
        <Setter Property="FontSize" Value="16.5"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="#1D1E24"/>
        <Setter Property="Foreground" Value="#F7630C"/>
        <Setter Property="FontSize" Value="16.5"/>
    </Style>
    
    <Style x:Key="ContorlWindowButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="Aqua"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Margin" Value="8"/>
    </Style>

</ResourceDictionary>